generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) // Unique user ID
  name      String
  email     String   @unique
  password  String
  role      String   // SUPER_ADMIN, ADMIN, MODERATOR, EVALUATOR
  updatedAt DateTime @updatedAt

  // NextAuth.js session fields
  accounts  Account[]
  sessions  Session[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @unique
  user              User    @relation(fields: [userId], references: [id])
  type              String
  provider          String
  providerAccountId String  @unique
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  expires      DateTime
}


// scoresheet model
model Forms {
  formId     Int      @id @default(autoincrement())
  userId     Int
  areaId     Int
  fields     Fields[] // One-to-Many relationship
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  @@map("Forms")
}

model Fields {
  fieldId  Int      @id @default(autoincrement())
  form     Forms   @relation(fields: [formId], references: [formId], onDelete: Cascade)
  formId   Int
  indicatorNo Int
  indicatorName String
  method String[]
  evidence String[]
  movs     String[] // Array type in PostgreSQL
  rating   Int
  remarks  String?


  @@map("Fields")
}
